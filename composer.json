{
    "name": "theinnercircle/icbot",
    "description": "The Inner Circle chat bot",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Kankiewicz",
            "email": "Chris@ChrisKankiewicz.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-intl": "*",
        "botman/botman": "^2.6",
        "botman/driver-telegram": "^1.5",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^2.0",
        "nesbot/carbon": "^2.28",
        "php-di/slim-bridge": "^3.0",
        "slim/psr7": "^1.0",
        "slim/slim": "^4.3",
        "tightenco/collect": "^5.0 || ^6.0 || ^7.0 || ^8.0",
        "vlucas/phpdotenv": "^5.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.0",
        "psy/psysh": "^0.10",
        "vimeo/psalm": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
